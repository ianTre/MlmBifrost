<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- <style name="EditTextWhite" parent="TextAppearance.AppCompat"> -->
    <!-- AppTheme -->
    <style name="EditTextWhite" parent="Widget.Design.TextInputLayout">
        <!-- Color que tiene el PlaceHolder del Textbox -->
        <item name="android:textColorHint">@color/editTextColorWhite</item>
        <!-- Dimension del texto -->
        <item name="android:textSize">@dimen/textSizeTextViews</item>
        <!-- Color que tiene el texto del TextBox -->
        <item name="android:textColorPrimary">@color/editTextColorWhite</item>

        <!-- <item name="colorAccent">@color/colorPrimary</item> -->

        <!-- Color cuando el control no estÃ¡ activado -->
        <item name="colorControlNormal">@color/colorPrimary</item>
        <!-- Color que se pone al estar Activado -->
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>

    <style name="ErrorTextInputLayout" parent="TextAppearance.Design.Error">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

    <style name="RaisedButtonDark" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColor">@color/editTextColorWhite</item>
    </style>


</resources>
